#!/bin/bash

# Install common software

# Homebrew
# [ -f /usr/local/bin/brew ] || ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"

# BREWS=\
# brew-cask \
# colordiff \
# git \
# node4-lts \
# openssl \
# phantomjs \
# the_silver_searcher \
# trash \
# z \
# zsh
# [ -f /usr/local/bin/brew ] brew install $BREWS

# # Node
# NPM_MODULES=\
# npm \
# pure-prompt \
# babel \
# eslint \
# babel-eslint \
# stylelint \
# stylelint-config-standard \
# esformatter
# [ -d $NODE_PATH ] npm install -g $NPM_MODULES

# [ -d ~/.oh-my-zsh ] || curl -L https://raw.github.com/robbyrussell/oh-my-zsh/master/tools/install.sh | sh

# Setup root Symlinks
[ -h ~/.aliases ] && unlink ~/.aliases
[ -f ~/src/dotfiles/.aliases ] && ln -s ~/src/dotfiles/.aliases ~/.aliases

[ -h ~/.editorconfig ] && unlink ~/.editorconfig
[ -f ~/src/dotfiles/.editorconfig ] && ln -s ~/src/dotfiles/.editorconfig ~/.editorconfig

[ -h ~/.gitconfig ] && unlink ~/.gitconfig
[ -f ~/src/dotfiles/.gitconfig ] && ln -s ~/src/dotfiles/.gitconfig ~/.gitconfig

[ -h ~/.gitignore_global ] && unlink ~/.gitignore_global
[ -f ~/src/dotfiles/.gitignore_global ] && ln -s ~/src/dotfiles/.gitignore_global ~/.gitignore_global

[ -h ~/.eslintrc ] && unlink ~/.eslintrc
[ -f ~/src/dotfiles/.eslintrc ] && ln -s ~/src/dotfiles/.eslintrc ~/.eslintrc

[ -h ~/.stylelintrc ] && unlink ~/.stylelintrc
[ -f ~/src/dotfiles/.stylelintrc ] && ln -s ~/src/dotfiles/.stylelintrc ~/.stylelintrc

[ -h ~/.esformatterrc ] && unlink ~/.esformatterrc
[ -f ~/src/dotfiles/.esformatterrc ] && ln -s ~/src/dotfiles/.esformatterrc ~/.esformatterrc

[ -h ~/.babelrc ] && unlink ~/.babelrc
[ -f ~/src/dotfiles/.babelrc ] && ln -s ~/src/dotfiles/.babelrc ~/.babelrc

[ -h ~/.zshrc ] && unlink ~/.zshrc
[ -f ~/src/dotfiles/.zshrc ] && ln -s ~/src/dotfiles/.zshrc ~/.zshrc

[ -h ~/bin ] && unlink ~/bin
[ -d ~/src/dotfiles/bin ] && ln -s ~/src/dotfiles/bin ~/

[ -h ~/.naiad ] && unlink ~/.naiad
[ -d ~/src/dotfiles/naiad ] && ln -s ~/src/dotfiles/naiad ~/.naiad

# Setup Atom
# @TODO Install or restor backup from gist

# Setup ST3 Symlinks
[ -h ~/Library/Application\ Support/Sublime\ Text\ 3/Packages/naiad ] && unlink ~/Library/Application\ Support/Sublime\ Text\ 3/Packages/naiad
[ -d ~/src/dotfiles/naiad ] && ln -s ~/src/dotfiles/naiad ~/Library/Application\ Support/Sublime\ Text\ 3/Packages/naiad

[ -h ~/Library/Application\ Support/Sublime\ Text\ 3/Packages/User/Default\ \(OSX\).sublime-keymap ] && unlink ~/Library/Application\ Support/Sublime\ Text\ 3/Packages/User/Default\ \(OSX\).sublime-keymap
[ -d ~/src/dotfiles/User/Default\ \(OSX\).sublime-keymap ] && ln -s ~/src/dotfiles/User/Default\ \(OSX\).sublime-keymap ~/Library/Application\ Support/Sublime\ Text\ 3/Packages/User/Default\ \(OSX\).sublime-keymap

[ -h ~/Library/Application\ Support/Sublime\ Text\ 3/Packages/User/Preferences.sublime-settings ] && unlink ~/Library/Application\ Support/Sublime\ Text\ 3/Packages/User/Preferences.sublime-settings
[ -d ~/src/dotfiles/User/Preferences.sublime-settings ] && ln -s ~/src/dotfiles/User/Preferences.sublime-settings ~/Library/Application\ Support/Sublime\ Text\ 3/Packages/User/Preferences.sublime-settings
