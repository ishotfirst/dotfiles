# Setup root symlinks
echo $fg[red]Setup root symlinks...$reset_color
for f in $(ls -A ../symlinks)
do
	[ -h ~/$f ] && unlink ~/$f
	[ -f ~/src/dotfiles/symlinks/$f ] && ln -s ~/src/dotfiles/symlinks/$f ~/$f
done
