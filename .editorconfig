# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = LF
insert_final_newline = true
tab_width = 2
indent_style = space
indent_size = 2

# 4 space indentation
[*.py]
indent_style = space
indent_size = 2

# 2 space indentation
{*.js, *.json, *.php}
indent_style = space
indent_size = 2

{*.js, *.json}
trim_trailing_whitespace = true
